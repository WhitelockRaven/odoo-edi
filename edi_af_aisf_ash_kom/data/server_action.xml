<?xml version="1.0" encoding="utf-8"?>
<odoo noupdate="1">
    <record id="update_departments_officers" model="ir.actions.server">
        <field name="name">Update offices</field>
        <field name="model_id" ref="base.model_hr_department"/>
        <field name="state">code</field>
        <field name="groups_id" eval="[(4, ref('base.group_system'))]"/>
        <field name="code">
for department in records:
    department.ash_kom_office_get(department.office_code)</field>
    </record>

    <function name="create_action" model="ir.actions.server">
        <value model="ir.actions.server" search="[
            ('id', 'in', [ref('update_departments_officers')]),
            ]"/>
    </function>
</odoo>

